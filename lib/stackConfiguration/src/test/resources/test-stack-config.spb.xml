<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="https://www.springframework.org/schema/beans"
	xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xmlns:context="https://www.springframework.org/schema/context"
	xsi:schemaLocation="
		                   https://www.springframework.org/schema/beans
		                   https://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           https://www.springframework.org/schema/context
                           https://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />

	<import resource="stack-configuration.spb.xml" />

	<!-- This POJO will be injected with values from stackConfiguation -->
	<bean id="testSpringInjected" class="org.sagebionetworks.SpringInjected">
		<property name="driver" ref="stackConfiguration.idGeneratorDatabaseDriver"/>
		<property name="connectionString" ref="stackConfiguration.idGeneratorDatabaseConnectionString"/>
		<property name="username" ref="stackConfiguration.idGeneratorDatabaseUsername"/>
		<property name="password" ref="stackConfiguration.idGeneratorDatabasePassword"/>
	</bean>

</beans>