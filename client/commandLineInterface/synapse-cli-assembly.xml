<assembly
	xmlns="https://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 https://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<!-- This assembly bundles Jars and scripts into a zip for installation. -->
	<id>synapse-cli-assembly</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>synapse/lib</outputDirectory>
            <useProjectArtifact/>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<outputDirectory>synapse/bin</outputDirectory>
			<directory>${project.basedir}/src/main/scripts</directory>
		</fileSet>
	</fileSets>
</assembly>
